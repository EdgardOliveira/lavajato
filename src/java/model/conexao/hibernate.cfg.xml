<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/lavajato?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">lavajato</property>
    <property name="hibernate.connection.password">lavajato</property>
    <mapping resource="model/beans/Cliente.hbm.xml"/>
    <mapping resource="model/beans/Prodserv.hbm.xml"/>
    <mapping resource="model/beans/Funcionario.hbm.xml"/>
    <mapping resource="model/beans/Itemvenda.hbm.xml"/>
    <mapping resource="model/beans/Venda.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
